# Site Configuration
SITE_URL=https://mseducation.in
CONTACT_EMAIL=contact@mseducation.in

# MongoDB
MONGODB_URI=your_mongodb_connection_string

# Email Configuration (Nodemailer)
# For Gmail: Use App Password (not your regular password)
# Generate App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@mseducation.in
EMAIL_FROM_NAME=MS Education

# Alternative Email Services:
# - Gmail: smtp.gmail.com (Port: 587, Secure: false)
# - Outlook: smtp-mail.outlook.com (Port: 587, Secure: false)
# - SendGrid: smtp.sendgrid.net (Port: 587, Secure: false, User: apikey, Pass: your-sendgrid-api-key)
# - AWS SES: email-smtp.region.amazonaws.com (Port: 587)

# Analytics (Optional - only if user consents)
ANALYTICS_KEY=your_analytics_key_here
PLAUSIBLE_DOMAIN=mseducation.in

# Next.js
NEXT_PUBLIC_SITE_URL=https://mseducation.in.ai

# NextAuth
# For development: http://localhost:3000
# For production: https://your-domain.vercel.app (Vercel sets this automatically, but you can override)
NEXTAUTH_URL=http://localhost:3000
# Generate a secure random string: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key

# Admin Credentials (REQUIRED)
ADMIN_EMAIL=admin@mseducation.com
ADMIN_PASSWORD=Hello$@

# Cloudinary (Required for image/video uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
